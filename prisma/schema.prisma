datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id     Int     @id @default(autoincrement())
  name   String
  email  String  @unique
  models Model[] // Add this line to establish the relationship
}

model Model {
  id     Int    @id @default(autoincrement())
  name   String
  bio    String
  photo  String
  userId Int
  user   User   @relation(fields: [userId], references: [id])
}
